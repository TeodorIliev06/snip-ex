@{
    ViewData["Title"] = "500 - Internal Server Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SnipEx</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/error/style.css" />
</head>
<body>
    <div class="error-container">
        <pre class="ascii-art">
███████  ██████   ██████
██      ██    ██ ██    ██
███████ ██    ██ ██    ██
     ██ ██    ██ ██    ██
███████  ██████   ██████
</pre>
        <h1 class="error-title">Internal Server Error</h1>

        <p class="error-message">Something went wrong on our end.</p>
        <p class="developer-joke">The server had a coffee break and forgot to come back.</p>

        <div class="error-actions">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
            <a href="javascript:window.location.reload()" class="btn btn-secondary">Try Again</a>
        </div>

        <div class="comment-style">Don't worry, we're already on it (probably)</div>
    </div>
</body>
</html>