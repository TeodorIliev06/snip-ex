@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SnipEx.Web.ViewModels.Comment
@using SnipEx.Web.ViewModels.Post
@model PostDetailsViewModel

@{
    ViewData["Title"] = Model.Title + " - SnipEx";
}

<div class="container">
    <div class="post-card">
        <div class="post-header">
            <h1 class="post-title">@Model.Title</h1>
            <div class="post-meta">
                <div class="author-info">
                    <div class="avatar">@Model.UserName[0]</div>
                    <span>@Model.UserName</span>
                </div>
                <div class="post-date">
                    <i class="fa fa-calendar-alt"></i> @Model.CreatedAt
                </div>
            </div>
            <div class="post-tags">
                @foreach (var tag in Model.Tags)
                {
                    <span class="post-tag">@tag</span>
                }
            </div>
        </div>

        <div class="code-container">
            <div class="code-header">
                <span class="language-badge">@Model.LanguageName</span>
                <button class="copy-button" onclick="copyToClipboard()" title="Copy to clipboard">
                    <i class="fa fa-copy"></i> Copy
                </button>
            </div>
            <div class="code-snippet">
                <pre><code class="language-@Model.LanguageName">@Model.Content</code></pre>
            </div>
        </div>
        
        <input type="hidden" id="currentUserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
        <div class="post-actions">
            <button class="action-button like-button @(Model.IsLikedByCurrentUser ? "liked" : "")" 
                    data-post-id="@Model.Id">
                <i class="fa fa-thumbs-up"></i>
                @if (@Model.LikesCount > 0)
                {
                    <span class="count">@Model.LikesCount</span>
                }
            </button>
            <button class="action-button save-button">
                <i class="fa fa-bookmark"></i> Save
            </button>
            <button class="action-button share-button">
                <i class="fa fa-share-alt"></i> Share
            </button>
        </div>
    </div>

    <div class="comments-section">
        <div class="comments-header">
            <h2 class="comments-title">Comments (@Model.Comments.Count)</h2>
            <button class="sort-comments">
                <i class="fa fa-sort"></i> Sort by newest
            </button>
        </div>

        <partial name="_CommentForm" model="new AddPostCommentFormModel { PostId = Model.Id }" />

        <div class="comments-list">
            @foreach (var comment in Model.Comments)
            {
                <div class="comment">
                    <div class="comment-header">
                        <div class="comment-author-info">
                            <div class="avatar small">@comment.UserName[0]</div>
                            <div>
                                <div class="comment-author">@comment.UserName</div>
                                <div class="comment-date">@comment.CreatedAt</div>
                            </div>
                        </div>
                        <div class="comment-actions">
                            <button class="comment-action" title="Reply">
                                <i class="fa fa-reply"></i>
                            </button>
                            <button class="comment-action like-button @(comment.IsLikedByCurrentUser ? "liked" : "")"
                                    data-comment-id="@comment.Id">
                                <i class="fa fa-thumbs-up"></i>
                                @if (comment.LikesCount > 0)
                                {
                                    <span class="count">@comment.LikesCount</span>
                                }
                            </button>
                        </div>
                    </div>
                    <div class="comment-body">
                        @comment.Content
                    </div>
                    
                    <!-- Reply form (initially hidden) -->
                    <div class="reply-form-container" id="reply-form-@comment.Id" style="display: none;">
                        <form class="reply-form" data-post-id="@Model.Id" data-parent-comment-id="@comment.Id">
                            <input type="hidden" name="UserId" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" />
                            <div class="form-group">
                                <textarea name="Content" class="form-control" placeholder="Write your reply..." required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">Reply</button>
                            <button type="button" class="btn btn-secondary btn-sm cancel-reply" data-comment-id="@comment.Id">Cancel</button>
                        </form>
                    </div>


            <!-- Replies section -->
            @if (comment.Replies != null && comment.Replies.Any())
            {
                <div class="replies-container">
                    @foreach (var reply in comment.Replies)
                    {
                        <div class="comment reply" id="comment-@reply.Id">
                            <div class="comment-header">
                                <div class="comment-author-info">
                                    <div class="avatar small">@reply.UserName[0]</div>
                                    <div>
                                        <div class="comment-author">@reply.UserName</div>
                                        <div class="comment-date">@reply.CreatedAt</div>
                                    </div>
                                </div>
                                <div class="comment-actions">
                                    <button class="comment-action reply-button" title="Reply" data-comment-id="@reply.Id">
                                        <i class="fa fa-reply"></i>
                                    </button>
                                    <button class="comment-action like-button @(reply.IsLikedByCurrentUser ? "liked" : "")"
                                            data-comment-id="@reply.Id">
                                        <i class="fa fa-thumbs-up"></i>
                                        @if (reply.LikesCount > 0)
                                        {
                                            <span class="count">@reply.LikesCount</span>
                                        }
                                    </button>
                                </div>
                            </div>
                            <div class="comment-body">
                                @reply.Content
                            </div>

                            <!-- Reply form for replies (initially hidden) -->
                            <div class="reply-form-container" id="reply-form-@reply.Id" style="display: none;">
                                        <form class="reply-form" data-post-id="@Model.Id" data-parent-comment-id="@comment.Id">
                                    <input type="hidden" name="PostId" value="@Model.Id" />
                                    <input type="hidden" name="ParentCommentId" value="@reply.Id" />
                                    <div class="form-group">
                                        <textarea name="Content" class="form-control" placeholder="Write your reply..." required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm">Reply</button>
                                    <button type="button" class="btn btn-secondary btn-sm cancel-reply" data-comment-id="@reply.Id">Cancel</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            }
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism-tomorrow.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/post/details.css" />
    <link rel="stylesheet" href="~/css/post/responsive.css" />
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/prism.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-csharp.min.js"></script>
    <script src="~/js/post/details.js"></script>
    <script src="~/js/comment/commentReply.js"></script>
}