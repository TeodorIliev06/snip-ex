@using SnipEx.Web.ViewModels.Post
@model PostIndexViewModel
@{
    ViewData["Title"] = "Code Snippets";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Search</h5>
                    <form id="searchForm" class="mb-3">
                        <div class="input-group">
                            <input type="text"
                                   name="search"
                                   class="form-control"
                                   placeholder="Search snippets..."
                                   value="@Model.SearchQuery">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <h5 class="card-title">Popular Tags</h5>
                    <div id="tagCloud" class="d-flex flex-wrap gap-2" data-selected-tag="@Model.SelectedTag">
                        @foreach (var tag in Model.PopularTags)
                        {
                            <a href="#"
                               data-tag="@tag.Name"
                               class="tag-filter badge rounded-pill @(tag.IsSelected ? "bg-primary text-white" : "text-dark")">
                                #@tag.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Sort Options -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Code Snippets</h2>
                <div class="btn-group">
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-sort="newest"
                       asp-route-tag="@Model.SelectedTag"
                       asp-route-search="@Model.SearchQuery"
                       class="btn @(Model.CurrentSort == "newest" ? "btn-primary" : "btn-outline-primary")">
                        Newest
                    </a>
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-sort="popular"
                       asp-route-tag="@Model.SelectedTag"
                       asp-route-search="@Model.SearchQuery"
                       class="btn @(Model.CurrentSort == "popular" ? "btn-primary" : "btn-outline-primary")">
                        Popular
                    </a>
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-sort="rating"
                       asp-route-tag="@Model.SelectedTag"
                       asp-route-search="@Model.SearchQuery"
                       class="btn @(Model.CurrentSort == "rating" ? "btn-primary" : "btn-outline-primary")">
                        Top Rated
                    </a>
                </div>
            </div>

            <!-- Snippets -->
            @foreach (var post in Model.Posts)
            {
                <div class="card mb-4 snippet-card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">
                                <a asp-controller="Posts"
                                   asp-action="Details"
                                   asp-route-id="@post.Id"
                                   class="text-decoration-none">
                                    @post.Title
                                </a>
                            </h5>
                            <small class="text-muted">
                                Posted by @post.UserName
                                <span class="post-date" data-timestamp="@post.CreatedAt"></span>
                            </small>
                        </div>
                        <div class="d-flex gap-3">
                            <span title="Views"><i class="bi bi-eye"></i> @post.Views</span>
                            <span title="Rating"><i class="bi bi-star"></i> @post.Rating</span>
                            <span title="Comments"><i class="bi bi-chat"></i> @post.CommentCount</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <pre class="bg-light p-3 rounded"><code>@post.Content</code></pre>
                        <div class="mt-3">
                            @foreach (var tag in post.Tags)
                            {
                                <a href="#"
                                   data-tag="@tag.Name"
                                   class="tag-filter badge rounded-pill @(tag.IsSelected ? "bg-primary text-white" : "text-dark") text-decoration-none me-1">
                                    #@tag.Name
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (!Model.Posts.Any())
            {
                <div class="text-center py-5">
                    <h3>No snippets found</h3>
                    <p class="text-muted">Try adjusting your filters or search terms</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/post/index.css"/>
}

