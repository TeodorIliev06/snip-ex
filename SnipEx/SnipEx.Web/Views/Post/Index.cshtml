@using SnipEx.Data.Models
@model IEnumerable<Post>
@{
    ViewData["Title"] = "Code Snippets";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Search</h5>
                    <form id="searchForm" class="mb-3">
                        <div class="input-group">
                            <input type="text"
                                   name="search"
                                   class="form-control"
                                   placeholder="Search snippets..."
                                   value="@ViewBag.SearchQuery">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <h5 class="card-title">Popular Tags</h5>
                    <div id="tagCloud" class="d-flex flex-wrap gap-2" data-selected-tag="@ViewBag.SelectedTag">
                        @foreach (var tag in ViewBag.PopularTags)
                        {
                            <a href="#"
                               data-tag="@tag.Name"
                               class="tag-filter badge rounded-pill text-dark">
                                #@tag.Name
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <!-- Sort Options -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Code Snippets</h2>
                <div class="btn-group">
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-sort="newest"
                       class="btn @(ViewBag.CurrentSort == "newest" ? "btn-primary" : "btn-outline-primary")">
                        Newest
                    </a>
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-sort="popular"
                       class="btn @(ViewBag.CurrentSort == "popular" ? "btn-primary" : "btn-outline-primary")">
                        Popular
                    </a>
                    <a asp-controller="Post"
                       asp-action="Index"
                       asp-route-sort="rating"
                       class="btn @(ViewBag.CurrentSort == "rating" ? "btn-primary" : "btn-outline-primary")">
                        Top Rated
                    </a>
                </div>
            </div>

            <!-- Snippets -->
            @foreach (var post in Model)
    {
        <div class="card mb-4 snippet-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title mb-0">
                        <a asp-controller="Posts" 
                           asp-action="Details" 
                           asp-route-id="@post.Id"
                           class="text-decoration-none">
                            @post.Title
                        </a>
                    </h5>
                    <small class="text-muted">
                        Posted by @(post.User?.UserName ?? "Anonymous") 
                        <span class="post-date" data-timestamp="@post.CreatedAt.ToString("o")"></span>
                    </small>
                </div>
                <div class="d-flex gap-3">
                    <span title="Views"><i class="bi bi-eye"></i> @post.Views</span>
                    <span title="Rating"><i class="bi bi-star"></i> @post.Rating</span>
                    <span title="Comments"><i class="bi bi-chat"></i> @post.Comments.Count</span>
                </div>
            </div>
            <div class="card-body">
                <pre class="bg-light p-3 rounded"><code>@post.Content</code></pre>
                <div class="mt-3">
                    @foreach (var postTag in post.PostsTags)
                    {
                        <a href="#" 
                           data-tag="@postTag.Tag.Name"
                           class="tag-filter badge rounded-pill text-dark text-decoration-none me-1">
                            #@postTag.Tag.Name
                        </a>
                    }
                </div>
            </div>
        </div>
    }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <h3>No snippets found</h3>
                    <p class="text-muted">Try adjusting your filters or search terms</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/post/index.css"/>
}

