@using SnipEx.Web.ViewModels.Comment
@model AddPostCommentFormModel

<form class="comment-form">
    <input type="hidden" name="PostId" value="@Model.PostId" />
    <div class="comment-input-container">
        <textarea name="Content" class="comment-input" placeholder="Share your thoughts..."></textarea>
        <span class="text-danger validation-message" data-valmsg-for="Content"></span>
        <button type="submit" class="submit-comment">Post Comment</button>
    </div>
</form>
