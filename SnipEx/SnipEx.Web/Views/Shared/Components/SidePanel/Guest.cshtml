<div class="side-panel">
    <div class="guest-panel-content">
        <h3>Join SnipEx</h3>
        <p>Create an account to unlock full features:</p>
        <ul>
            <li>Save and bookmark snippets</li>
            <li>Create and share your own code snippets</li>
            <li>Connect with other developers</li>
            <li>Customize your profile</li>
        </ul>
        <div class="auth-buttons">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Log In</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-secondary">Sign Up</a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/profile/side-panel/guestSidePanel.css" />
    <link rel="stylesheet" href="~/css/profile/side-panel/responsive.css" />
}