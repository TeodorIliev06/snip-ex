@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SnipEx.Web.ViewModels.User
@model UserConnectionsViewModel

@{
    ViewData["Title"] = "SnipEx - Connections";
}

<div class="connections-container">
    <div class="connections-content">
        <section class="connections-header">
            <h1>Connections</h1>
            <div class="connections-stats">
                <div class="stat-item">
                    <span class="stat-number">@Model.ConnectionsCount</span>
                    <span class="stat-label">Connections</span>
                </div>
            </div>
        </section>

        <div class="filter-bar">
            <button class="filter-button active" data-filter="all">All</button>
            <button class="filter-button" data-filter="following">Following</button>
            <button class="filter-button" data-filter="followers">Followers</button>
            <button class="filter-button" data-filter="mutual">Mutual</button>
            <button class="filter-button" data-filter="suggested">Suggested</button>
        </div>

        <div class="connections-list">
            @if (Model.Connections.Any())
            {
                @foreach (var connection in Model.Connections)
                {
                    <div class="connection-item @connection.CssType" data-id="@connection.Id">
                        <div class="connection-avatar">
                        <img src="@connection.ActorAvatar">
                        </div>
                        <div class="connection-content">
                            <div class="connection-header">
                                <div class="connection-name">
                                    <span>@connection.Username</span>
                                    <span class="connection-badge @connection.CssType">Connected</span>
                                </div>
                                <div class="connection-actions">
                                    <button 
                                        class="connect-button btn-disconnect" 
                                        data-target-user-id="@connection.TargetUserId">
                                        Disconnect
                                    </button>
                                </div>
                            </div>
                            <div class="connection-meta">
                                <span class="meta-item"><i class="fa-solid fa-code"></i> @connection.PostsCount snippets</span>
                                <span class="meta-item"><i class="fa-solid fa-star"></i> 94 stars</span>
                                <span class="meta-item"><i class="fa-solid fa-users"></i> 8 mutual connections</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fa-regular fa-bell-slash"></i>
                    <p>No connections yet</p>
                    <span>When you receive connections, they'll appear here.</span>
                </div>
            }
            <!-- Mutual Connection -->
            <div class="connection-item mutual" data-id="1">
                <div class="connection-avatar">
                    <img src="/images/default-avatar.png" alt="alexcoder">
                </div>
                <div class="connection-content">
                    <div class="connection-header">
                        <div class="connection-name">
                            <span>alexcoder</span>
                            <span class="connection-badge mutual">Mutual</span>
                        </div>
                        <div class="connection-actions">
                            <button class="btn-unfollow">Unfollow</button>
                        </div>
                    </div>
                    <div class="connection-bio">
                        Full-stack developer passionate about clean code and new technologies.
                    </div>
                    <div class="connection-meta">
                        <span class="meta-item"><i class="fa-solid fa-code"></i> 48 snippets</span>
                        <span class="meta-item"><i class="fa-solid fa-star"></i> 127 stars</span>
                        <span class="meta-item"><i class="fa-solid fa-users"></i> 15 mutual connections</span>
                    </div>
                </div>
            </div>

            <!-- Following Connection -->
            <div class="connection-item following" data-id="2">
                <div class="connection-avatar">
                    <img src="/images/default-avatar.png" alt="devmartin">
                </div>
                <div class="connection-content">
                    <div class="connection-header">
                        <div class="connection-name">
                            <span>devmartin</span>
                            <span class="connection-badge following">Connected</span>
                        </div>
                        <div class="connection-actions">
                            <button class="btn-unfollow">Disconnect</button>
                        </div>
                    </div>
                    <div class="connection-meta">
                        <span class="meta-item"><i class="fa-solid fa-code"></i> 36 snippets</span>
                        <span class="meta-item"><i class="fa-solid fa-star"></i> 94 stars</span>
                        <span class="meta-item"><i class="fa-solid fa-users"></i> 8 mutual connections</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="load-more">
            <button id="load-more-btn" class="btn-load-more">Load more</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile/connections.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/profile/connections.css" asp-append-version="true">
}