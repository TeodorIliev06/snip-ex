@{
    ViewData["Title"] = "SnipEx - Notifications";
}

<div class="notifications-container">
    <div class="notifications-content">
        <section class="notifications-header">
            <h1>Notifications</h1>
        </section>

        <div class="filter-bar">
            <button class="filter-button active" data-filter="all">All</button>
            <button class="filter-button" data-filter="mention">Mentions</button>
            <button class="filter-button" data-filter="like">Likes</button>
            <button class="filter-button" data-filter="comment">Comments</button>
            <button class="filter-button" data-filter="follow">Follows</button>
        </div>

        <div class="notifications-list">
            <!-- Like notification -->
            <div class="notification-item like" data-id="1">
                <div class="notification-avatar">
                    <img src="/images/default-avatar.png" alt="user1">
                </div>
                <div class="notification-content">
                    <div class="notification-text">
                        <strong>johndev</strong> liked your code snippet "Async Data Fetching Example"
                    </div>
                    <div class="notification-meta">
                        <span class="notification-time">5 minutes ago</span>
                        <a href="#" class="notification-link">View</a>
                    </div>
                </div>
                <div class="notification-badge">
                    <span class="unread-indicator"></span>
                </div>
            </div>

            <!-- Comment notification -->
            <div class="notification-item comment" data-id="2">
                <div class="notification-avatar">
                    <img src="/images/default-avatar.png" alt="user2">
                </div>
                <div class="notification-content">
                    <div class="notification-text">
                        <strong>sarahmiller</strong> commented on your snippet "CSS Flexbox Grid Template"
                    </div>
                    <div class="notification-meta">
                        <span class="notification-time">1 hour ago</span>
                        <a href="#" class="notification-link">View</a>
                    </div>
                </div>
                <div class="notification-badge">
                    <span class="unread-indicator"></span>
                </div>
            </div>

            <!-- Follow notification -->
            <div class="notification-item follow" data-id="3">
                <div class="notification-avatar">
                    <img src="/images/default-avatar.png" alt="user3">
                </div>
                <div class="notification-content">
                    <div class="notification-text">
                        <strong>alexcoder</strong> started following you
                    </div>
                    <div class="notification-meta">
                        <span class="notification-time">Yesterday</span>
                        <a href="#" class="notification-link">View Profile</a>
                    </div>
                </div>
            </div>

            <!-- Mention notification -->
            <div class="notification-item mention" data-id="4">
                <div class="notification-avatar">
                    <img src="/images/default-avatar.png" alt="user4">
                </div>
                <div class="notification-content">
                    <div class="notification-text">
                        <strong>devmartin</strong> mentioned you in a comment: "Thanks @@admin for sharing this solution!"
                    </div>
                    <div class="notification-meta">
                        <span class="notification-time">2 days ago</span>
                        <a href="#" class="notification-link">View</a>
                    </div>
                </div>
            </div>

            <!-- Another like notification -->
            <div class="notification-item like" data-id="5">
                <div class="notification-avatar">
                    <img src="/images/default-avatar.png" alt="user5">
                </div>
                <div class="notification-content">
                    <div class="notification-text">
                        <strong>codingpro</strong> liked your code snippet "React Hooks Implementation"
                    </div>
                    <div class="notification-meta">
                        <span class="notification-time">3 days ago</span>
                        <a href="#" class="notification-link">View</a>
                    </div>
                </div>
            </div>

            <!-- Another comment notification -->
            <div class="notification-item comment" data-id="6">
                <div class="notification-avatar">
                    <img src="/images/default-avatar.png" alt="user6">
                </div>
                <div class="notification-content">
                    <div class="notification-text">
                        <strong>emilyweb</strong> commented on your snippet "Database Connection Pattern"
                    </div>
                    <div class="notification-meta">
                        <span class="notification-time">5 days ago</span>
                        <a href="#" class="notification-link">View</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="load-more">
            <button id="load-more-btn" class="btn-load-more">Load more</button>
        </div>
    </div>
</div>

