@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <h1 class="register-title">Create Account</h1>
            <p class="register-subtitle">Start your coding journey now!</p>
        </div>

        <div class="register-form-container">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger validation-summary" role="alert"></div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-user"></i>
                        <input asp-for="Input.Username" class="custom-input" autocomplete="username" aria-required="true" placeholder="Username" />
                    </div>
                    <span asp-validation-for="Input.Username" class="text-danger validation-message"></span>
                </div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Input.Email" class="custom-input" autocomplete="email" aria-required="true" placeholder="Email address" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger validation-message"></span>
                </div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Input.Password" class="custom-input" autocomplete="new-password" aria-required="true" placeholder="Password" type="password" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger validation-message"></span>
                </div>

                <div class="form-group">
                    <div class="input-with-icon">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Input.ConfirmPassword" class="custom-input" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" type="password" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger validation-message"></span>
                </div>

                <div class="register-actions">
                    <button id="registerSubmit" type="submit" class="btn-register">
                        <span>Create Account</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
        </div>

        <div class="login-section">
            <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="login-link">Sign In</a></p>
        </div>
    </div>

    <div class="code-decoration">
        <div class="terminal-window">
            <div class="terminal-header">
                <div class="terminal-buttons">
                    <span class="terminal-button close"></span>
                    <span class="terminal-button minimize"></span>
                    <span class="terminal-button maximize"></span>
                </div>
                <div class="terminal-title">~/register</div>
            </div>
            <div class="terminal-content register-terminal-content">
                <div class="terminal-line">const user = await auth.register(username, email, password);</div>
                <div class="terminal-line">if (user) {</div>
                <div class="terminal-line">  console.log("Registration successful!");</div>
                <div class="terminal-line">  redirect("/snippets");</div>
                <div class="terminal-line">} else {</div>
                <div class="terminal-line">  console.error("Registration failed");</div>
                <div class="terminal-line">}</div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/profile/register.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/profile/register.js"></script>
}